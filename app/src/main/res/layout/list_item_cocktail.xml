<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/textview_cocktail_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cocktail: "
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textview_cocktail_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@id/textview_cocktail_name_label"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textview_ingrediant_name_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingrediant: "
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_cocktail_name_label"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textview_ingrediant_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingrediant"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/textview_ingrediant_name_label"
        app:layout_constraintTop_toTopOf="@id/textview_ingrediant_name_label"
        tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>